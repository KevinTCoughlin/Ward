<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevintcoughlin.ward" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:name="com.kevintcoughlin.ward.WardApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <activity
            android:name=".activities.SummonersActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SummonersActivity" />
        </activity>
        <activity
            android:name=".activities.NewsActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.SummonersActivity" />
        </activity>
        <meta-data android:name="com.crashlytics.ApiKey" android:value="18b85511073de7110b693fd33f7ef96cb27ae1eb"/>
    </application>
</manifest>
