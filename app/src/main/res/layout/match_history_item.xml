<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/champion_artwork"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin"
        android:layout_toRightOf="@+id/champion_artwork"
        android:layout_toEndOf="@+id/champion_artwork"
        android:layout_centerVertical="true">

        <TextView
            android:maxLines="1"
            android:id="@+id/champion_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#444"
            android:textSize="14sp"
            tools:text="Graves"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/stats"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_below="@+id/champion_name"
            tools:text="5/11/14"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:text="2 hours ago"/>

        <TextView
            android:maxLines="1"
            android:id="@+id/duration"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#444"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/time"
            tools:text="Ranked 5's"/>

    </RelativeLayout>

</RelativeLayout>